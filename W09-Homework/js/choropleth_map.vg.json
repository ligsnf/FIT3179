{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Malaysia",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/ligsnf/FIT3179/main/W09-Homework/js/ne_10m_malaysia_states.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces"
    }
  },
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.name",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ligsnf/FIT3179/main/W09-Homework/js/ne_10m_ocean.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ligsnf/FIT3179/main/W09-Homework/data/hies_state.csv"
            },
            "key": "state",
            "fields": [
              "income_median"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape", 
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "title": "Median Income (MYR, monthly)",
          "field": "income_median",
          "type": "quantitative", 
          "scale": {
            "scheme": "greens",
            "domain": [3000, 11000]
          },
          "legend": {
            "format": "$d"
          }
        },
        "tooltip": [
          {
            "title": "State",
            "field": "properties.name",
            "type": "nominal"
          },
          {
            "title": "Median Income",
            "field": "income_median",
            "type": "quantitative",
            "format": "$d"
          }
        ]
      }
    }
  ]
}