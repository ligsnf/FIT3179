{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Liveability of States in Malaysia (2022) based on Net Income",
  "width": 732,
  "height": 312,
  "params": [
    {
      "name": "zoom_level",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 15000,
        "step": 100,
        "name": "Zoom: "
      } 
    },
    {
      "name": "center_to",
      "value": [109.93, 4.01],
      "bind": {
        "input": "select",
        "options": [
          [109.93, 4.01],
          [101.7, 3.1],
          [115.7, 4.6],
          [100.3, 5.4]
        ],
        "labels": ["Centre", "Kuala Lumpur", "Sarawak", "Pilau Pinang"],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": { "expr": "center_to" },
    "scale": { "expr": "zoom_level" }
  },
  "layer": [
    {
      "data": {
        "url": "js/ne_10m_malaysia_states.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.name",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "js/ne_10m_malaysia_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#dfdfdf"
      }
    },
    {
      "data": {
        "url": "js/ne_10m_ocean.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_ocean"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "js/ne_10m_graticules_5.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_graticules_5"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "white",
        "strokeWidth": 0.8
      }
    },
    {
      "data": {
        "url": "js/ne_10m_malaysia_states.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "data/hies_state.csv"
            },
            "key": "state",
            "fields": [
              "income_mean",
              "expenditure_mean"
            ]
          }
        },
        {
          "calculate": "datum.income_mean - datum.expenditure_mean",
          "as": "net_income"
        }
      ],
      "mark": {
        "type": "geoshape", 
        "stroke": "white",
        "strokeWidth": 0.8
      },
      "encoding": {
        "color": {
          "title": "Net Income (MYR)",
          "field": "net_income",
          "type": "quantitative", 
          "scale": {
            "type": "threshold",
            "domain": [1500, 2000, 2800, 5000],
            "range": ["#edf8e9", "#bae4b3", "#74c476", "#31a354", "#006d2c"]
          },
          "legend": {
            "format": ",.0f"
          }
        },
        "tooltip": [
          {
            "title": "State",
            "field": "properties.name",
            "type": "nominal"
          },
          {
            "title": "Income (Mean)",
            "field": "income_mean",
            "type": "quantitative",
            "format": ",.0f"
          },
          {
            "title": "Expenditure (Mean)",
            "field": "expenditure_mean",
            "type": "quantitative",
            "format": ",.0f"
          },
          {
            "title": "Net Income",
            "field": "net_income",
            "type": "quantitative",
            "format": ",.0f"
          }
        ]
      }
    }
  ]
}
